%html
  %head
    %title LTE Studio
    %link{ rel: "shortcut icon", href:"/images/logo_ico.ico"}
    %link{ rel: "stylesheet", href: "/css/main.css" }
    %meta{ name: "description", content: "LTE studio è un centro di grafica e stampa che nasce con l'obiettivo di soddisfare tutte le esigenze e le necessità dei vari clienti." }
    %meta{ name: "keywords", content: "LTE studio, stampa, grafica, firenze, fotocopie, stampe fotografiche, fotografia, t-shirt, personalizzate, plottaggi, plotter, render 3d, quadri, stencil" }
    %meta{ name: "author", content: "Giuseppe Di Marzo, Francesco 'makevoid' Canessa" }
    %meta{ property: "og:site_name", content: "LTE Studio" }
    %meta{ property: "og:title", content: "LTE Studio" }
    %meta{ property: "og:type", content: "website" }
    - if @shirt
      - image = "http://ltestudio.it/images/shirts/#{@shirt.file}.png"
      - url = "http://ltestudio.it/shirts/#{@shirt.file}"
    - elsif @work
      - image = "http://ltestudio.it/images/works/#{@work.file}.png"
      - url = "http://ltestudio.it/works/#{@work.file}"
    - else
      - image = "http://ltestudio.it/images/logo_sito.png"
      - url = "http://ltestudio.it/"
    %meta{ property: "og:image", content: image }
    %meta{ property: "og:url", content: url }

    %meta{ property: "fb:admins", content: "giuseppe.d.marzo" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no" }
    - path = request.path.split("/")[1..-1]
    - path = path.join(" ") if path
  %body{ class: path || "home"  }
    #fb-root
    #container
      %header
        %img.palline_top{src: "/images/palline.png"}
        %h1
          %a{ href: "/" }
            / Ltestudio
            %img{src: "/images/logo_sito.png"}
            %p LTESTUDIO
      %nav
        %a{ href: "/" }         HOME
       
        %a{ href: "/t-shirts" } T.SHIRT
        
        %a{ href: "/works" }    AERO
        
        %a{ href: "/stampe" }   STAMPE
        
        %a{ href: "/contatti" } WHERE



      .clear
      %section.content
        = yield


      .clear
      .footer
        .social
          %a{ href: "https://www.facebook.com/LteStudio?fref=ts" }
            %img{src: "/images/social/facebook.png"}
          %a{ href: "https://twitter.com/lte_studio" }  
            %img{src: "/images/social/twitter.png"}
          %a{ href: "skype:lte_studio?call" }
            %img{src: "/images/social/skype.png"}
          
        © LTE di Di Marzo Antonio & C. S.a.s - P.Iva n°01684190703
      %img{src: "/images/palline.png"}
    %script{ type: "text/javascript", src: "/js/ie_html5.js" }
    %script{ type: "text/javascript", src: "/js/vendor/underscore.js" }
    %script{ type: "text/javascript", src: "/js/vendor/jquery.js" }
    %script{ type: "text/javascript", src: "/js/vendor/jquery_imagesloaded.js" }
    - if request.user_agent =~ /MSIE/
      %script{ type: "text/javascript", src: "/js/vendor/jquery_cycle.js" }
    %script{ type: "text/javascript", src: "/js/app.js" }
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));